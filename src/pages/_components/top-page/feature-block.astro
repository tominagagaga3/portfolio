---
import { baseStyles } from "../../../styles/styles";
import SectionTitle from "../../../components/section-title.astro";
import SectionBlock from "./section-block.astro";
import LinkageList from "./linkage-list.astro";
import FeatureCards from "./feature-block/feature-cards.astro";
---

<SectionBlock bg={baseStyles.colors.base}>
  <SectionTitle title="設備のご紹介" />
  <div class="contents">
  <LinkageList />
  <a href="/pricing"><div class="go-pricing-button">ご利用料金についてはこちら</div></a>
  <FeatureCards />
  </div>
</SectionBlock>

<style
  define:vars={{
    primary: baseStyles.colors.primary,
    accent: baseStyles.colors.accent,
    accentLine: baseStyles.colors.accentLine,
    base: baseStyles.colors.base,
    white: baseStyles.colors.white,
    xxLarge: baseStyles.fontSize.xxLarge,
    xLarge: baseStyles.fontSize.xLarge,
    medium: baseStyles.fontSize.medium,
    large: baseStyles.fontSize.large,
    small: baseStyles.fontSize.small,
    xSmall: baseStyles.fontSize.xSmall,

  }}
>
  .contents {
    max-width: 1150px;
    margin: 40px auto 0;
    color: var(--primary);
    text-align: center;
  }

  a{
    display: inline-block;
    margin: 40px 0;
    text-decoration: none;
  }

  .go-pricing-button{
    padding: 10px 40px;
    font-size: var(--medium);
    font-weight: 700;
    color: var(--white);
    background-color: var(--primary);
    border: 2px solid var(--primary);
    border-radius: 40px;
  }

  @media screen and (max-width: 1100px) {
    .contents {
      width: 95%;
    }
    .sp-br {
      display: block;
    }
  }

  @media screen and (max-width: 840px) {
    .visible-pc {
      display: none;
    }
    .visible-sp {
      display: block;
    }
    .pc-br {
      display: none;
    }
  }

  

  @media screen and (max-width: 480px) {
    img {
      width: 80px;
    }
    .pc-br {
      display: none;
    }

  }

</style>
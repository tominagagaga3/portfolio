---
import BaseLayout from "../layouts/base-layout.astro";
import { baseStyles } from "../styles/styles";
import PricingCard from "./_components/pricing-page/pricing-card.astro";
import PricingCardForSp from "./_components/pricing-page/pricing-card-for-sp.astro";

import { planInfo } from "../pages/_components/pricing-page/plan.ts";


const pageTitle = "料金表";
const description = "料金ページ";
---

<BaseLayout pageTitle={pageTitle} description={description}>
  <h1>
    3種類の料金プランから<br class="sp-br">お選びいただけます
  </h1>

  <div class="pricing-card-wrapper">
    {planInfo.map(plan => <PricingCard plan={plan} />)}
  </div>
  <div class="visible-sp">
    {(<PricingCardForSp />)}
  </div>

</BaseLayout>

<style
  define:vars={{
    primary: baseStyles.colors.primary,
    accent: baseStyles.colors.accent,
    accentLine: baseStyles.colors.accentLine,
    white: baseStyles.colors.white,
    black: baseStyles.colors.black,
    gray: baseStyles.colors.gray,
    base: baseStyles.colors.base,
    xSmall: baseStyles.fontSize.xSmall,
    small: baseStyles.fontSize.small,
    medium: baseStyles.fontSize.medium,
    large: baseStyles.fontSize.large,
    xLarge: baseStyles.fontSize.xLarge,
    xxLarge: baseStyles.fontSize.xxLarge,
  }}
>
  h1 {
    margin-top: 110px;
    margin-bottom: 50px;
    font-size: var(--xxLarge);
    color: var(--primary);
    text-align: center;
  }

  h1 span {
    color: var(--accent);
  }

  .pricing-card-wrapper {
    display: flex;
    gap: 24px;
    justify-content: center;
    max-width: 1100px;
    margin: 0 auto;
    margin-bottom: 100px;
    color: var(--black);
  }


  .sp-br {
    display: none;
  }


  .visible-sp {
    display: none;
  }

  @media screen and (max-width: 1170px) {
    .pricing-card-wrapper {
      flex-flow: column;
      gap: 20px;
      margin-bottom: 60px;
    }
    .visible-sp {
      display: block;
      width: 75%;
      margin: 0 auto;
    }
  }

  @media screen and (max-width: 840px) {
    .sp-br {
      display: block;
    }
  }

  @media screen and (max-width: 480px) {
    h1 {
      margin-top: 80px;
      margin-bottom: 25px;
      font-size: var(--large);
    }
    .visible-sp {
      width: 100%;
    }
  }
</style>

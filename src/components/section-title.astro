---
import { baseStyles } from "../styles/styles";

const { title } = Astro.props;
export interface Props {
  title: string;
}

const vars = {
  primary: baseStyles.colors.primary,
  large: baseStyles.fontSize.large,
  medium: baseStyles.fontSize.medium,
};
---

<p class="section-title">
  <span class="title-bar"></span>
  <span class="title-word" set:html={title} />
  <span class="title-bar"></span>
</p>

<style define:vars={vars}>
  .section-title {
    display: flex;
    flex-wrap: nowrap;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    text-align: center;
  }

  .title-bar {
    position: relative;
    flex: 0 1 50px;
    margin: 0 30px;
  }

  .title-bar::before {
    position: absolute;
    top: 50%;
    left: 0;
    display: inline-block;
    width: 100%;
    height: 2px;
    content: "";
    background-color: var(--primary);
  }

  .title-word {
    font-size: var(--large);
    color: var(--primary);
  }

  @media screen and (max-width: 800px) {
    .title-bar {
      flex: 0 1 30px;
      margin: 0;
    }

    .title-bar::before {
      width: 50%;
    }

    .title-bar:nth-child(3)::before {
      left: 20px;
      width: 50%;
    }

    .title-word {
      font-size: var(--medium);
    }
  }
</style>

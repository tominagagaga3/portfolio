---
import { Image } from "astro:assets";
import headerlogo from "../../assets/headerlogo.png";
---

<a href="/" class="link">
  <div class="logo">
    <div class="header-logo"><Image src={headerlogo} alt="ヘッダーロゴ" /></div>
  </div>
</a>
<style>
  .link {
    text-decoration: none;
  }

  .logo {
    font-size: 2.5rem;
  }

  .header-logo {
    font-weight: 700;
  }

  img {
    display: block;
    width: 230px;
    max-width: none;
    height: auto;
  }

  @media screen and (max-width: 800px) {
    img {
      display: block;
      width: 170px;
      height: auto;
    }
  }
</style>

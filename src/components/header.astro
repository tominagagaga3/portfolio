---
import Logo from "./util/logo.astro";
import Link from "./util/link-button.astro";
import HamburgerComponent from "./util/hamburger/hamburger";
import { baseStyles } from "../styles/styles";

let fontSize = baseStyles.fontSize.small;
---

<header class="container">
  <div class="logoContainer">
    <Logo />
  </div>
  <div class="buttonContainer">
    <Link label="料金表" url="/pricing" />
    <Link label="イベントレポート" url="/event-reports" />
  </div>
  <HamburgerComponent client:load />
</header>
<style
  define:vars={{
    fontSize,
    accent: baseStyles.colors.accent,
  }}
>


  .container {
    position: fixed;
    top: 0;
    z-index: 10;
    display: flex;
    justify-content: space-between;
    width: 100%;
    height: 80px;
    margin-top: 0;
    text-align: center;
    background: #fff;
    border-bottom: 1px solid #dfdfdf;
    box-shadow: 0 0 5px 1px rgb(0 0 0 / 20%);
  }

  .logoContainer {
    width: 230px;
    margin-left: 30px;
    display: flex;
    align-items: center;
  }

  .buttonContainer {
    display: flex;
    gap: 20px;
    align-items: center;
    justify-content: center;
    margin: 0 40px 0 0;
    font-size: var(--fontSize);
  }

  @media screen and (max-width: 800px) {
    .container {
      height: 60px;
    }

    .logoContainer {
      width: 240px;
      margin: 0 15px;
    }
    .buttonContainer {
      display: none;
    }
  }
</style>
